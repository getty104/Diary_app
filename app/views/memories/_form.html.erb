<%= simple_form_for @memory, :html => { :class => 'form-horizontal' } do |f| %>
  <%=Date.current%>
  <%= f.input :title %>
  <%= f.input :text %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                memories_path, :class => 'btn' %>
  </div>
<% end %>